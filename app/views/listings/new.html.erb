<h3>Create a listing!</h3>
<br></br>
<% if current_user %>
<div class = "col-md-4 col-md-offset-4">
  <div class = "new_form">
    <%= bootstrap_form_for @listing do |f| %>
      <%= f.text_field :title, placeholder: 'Title' %>
      <%= f.text_field :content, placeholder: 'Content' %>
      <%= f.text_field :location, placeholder: 'Address' %>
      <br>
      <%= f.uploadcare_uploader :image, :data => {:images_only => true, :clearable => true } %><br></br>
      <br>
      <div class="createlisting">
      <%= f.submit :class=>"btn btn-success btn-md"%><span></span>
      <% end %>
      </div>
  </div>
</div>
<% end %>
